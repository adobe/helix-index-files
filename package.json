{
  "name": "@adobe/helix-index-files",
  "version": "2.0.1",
  "private": true,
  "description": "Helix File Indexing Service",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov -i -g 'Post-Deploy' --check-coverage --branches 20 --statements 50 --lines 55 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov -i -g 'Post-Deploy' --check-coverage --branches 85 --statements 90 --lines 90 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g 'Post-Deploy'",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "wsk-builder -v",
    "deploy": "wsk-builder -v --deploy --test=/_status_check/healthcheck.json",
    "deploy-sequences": "wsk-builder --no-build -no-hints -l latest -l major -l minor",
    "deploy-ci": "wsk-builder -v --deploy --test=/_status_check/pingdom.xml --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci"
  },
  "wsk": {
    "name": "helix-services/index-files@${version}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-index-files.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-index-files/issues"
  },
  "homepage": "https://github.com/adobe/helix-index-files#readme",
  "dependencies": {
    "@adobe/helix-fetch": "1.6.1",
    "@adobe/helix-shared": "7.6.0",
    "@adobe/helix-status": "7.1.3",
    "@adobe/helix-testutils": "0.3.1",
    "@adobe/openwhisk-action-logger": "2.2.0",
    "@adobe/openwhisk-action-utils": "4.2.2",
    "algoliasearch": "4.2.0",
    "lodash.flatten": "4.4.0",
    "lodash.pick": "4.4.0",
    "micromatch": "4.0.2",
    "openwhisk": "3.21.2",
    "request": "2.88.2",
    "request-promise-native": "1.0.8",
    "yaml": "1.10.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.1",
    "@adobe/helix-log": "4.5.1",
    "@adobe/helix-ops": "1.11.2",
    "@adobe/openwhisk-action-builder": "2.12.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.7",
    "ajv": "6.12.2",
    "codecov": "3.7.0",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.2.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.21.1",
    "fs-extra": "9.0.1",
    "jsdoc-to-markdown": "6.0.1",
    "junit-report-builder": "2.0.0",
    "lint-staged": "10.2.9",
    "lodash": "4.17.15",
    "mocha": "7.2.0",
    "nock": "12.0.3",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "17.0.8"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
